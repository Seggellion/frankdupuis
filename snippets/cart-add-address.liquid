<style>
  .required{
    color:red;
    font-size: 1.4rem;
    font-family: Arial;
    margin-left: 2px;
  }
</style>

  {%- form 'customer_address', customer.new_address, aria-labelledBy: 'AddressNewHeading' -%}
   <div class="row">       
     <div class="field">
        <input type="text" id="AddressFirstNameNew" name="address[first_name]" value="{{ form.first_name }}" autocomplete="given-name" required>
        <label for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}<span class="required">*</span></label>
      </div>
      <div class="field">
        <input type="text" id="AddressLastNameNew" name="address[last_name]" value="{{ form.last_name }}" autocomplete="family-name" required>
        <label for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}<span class="required">*</span></label>
      </div>
    </div>
    <div class="field">
      <input type="text" id="AddressCompanyNew" name="address[company]" value="{{ form.company }}" autocomplete="organization" placeholder="Optional">
      <label for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
    </div>
    <div class="field">
      <input type="text" id="AddressAddress1New" name="address[address1]" value="{{ form.address1 }}" autocomplete="address-line1" required>
      <label for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}<span class="required">*</span></label>
    </div>
    <div class="field">
      <input type="text" id="AddressAddress2New" name="address[address2]" value="{{ form.address2 }}" autocomplete="address-line2"  placeholder="Optional">
      <label for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
    </div>
    <div class="field">
      <input type="text" id="AddressCityNew" name="address[city]" value="{{ form.city }}" autocomplete="address-level2" required>
      <label for="AddressCityNew">{{ 'customer.addresses.city' | t }}<span class="required">*</span></label>
    </div>

  <div class="field">
   <input type="hidden" id="AddressCountry" name="address[country]" value="Canada">
    <input type="hidden" id="AddressCountry" name="address[province]" value="Ontario">
  </div>
   
    <div class="field">
      <input type="text" id="AddressZipNew" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" autocomplete="postal-code" required>
      <label for="AddressZipNew">{{ 'customer.addresses.zip' | t }}<span class="required">*</span></label>
    </div>
    <div class="field">
      <input type="tel" id="AddressPhoneNew" name="address[phone]" value="{{ form.phone }}" autocomplete="tel" required>
      <label for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}<span class="required">*</span></label>
    </div>
    <div>
      {{ form.set_as_default_checkbox }}
      <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
    </div>
    <div>
      <button>Continue</button>      
    </div>
  {%- endform -%}
